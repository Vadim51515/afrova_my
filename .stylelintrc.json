{
    "extends": "stylelint-config-standard-scss",
    "rules": {
        "indentation": [4],
        "selector-class-pattern": null,
        "keyframes-name-pattern": null
    },
    "plugins": ["stylelint-order"],
    "rules": {
        "order/properties-order": [
            "display",
            "position",
            "top",
            "right",
            "bottom",
            "left",
            "z-index",
            "flex",
            "flex-direction",
            "flex-wrap",
            "justify-content",
            "align-items",
            "align-content",
            "box-sizing",
            "width",
            "min-width",
            "max-width",
            "height",
            "min-height",
            "max-height",
            "margin",
            "margin-top",
            "margin-right",
            "margin-bottom",
            "margin-left",
            "padding",
            "padding-top",
            "padding-right",
            "padding-bottom",
            "padding-left",
            "float",
            "clear",
            "object-fit",
            "object-position",
            "opacity",
            "color",
            "font",
            "font-family",
            "font-size",
            "font-weight",
            "line-height",
            "text-align",
            "text-decoration",
            "text-transform",
            "letter-spacing",
            "word-spacing",
            "white-space",
            "background",
            "background-color",
            "background-image",
            "background-repeat",
            "background-position",
            "background-size",
            "border",
            "border-top",
            "border-right",
            "border-bottom",
            "border-left",
            "border-width",
            "border-style",
            "border-color",
            "border-radius",
            "box-shadow",
            "outline",
            "overflow",
            "cursor",
            "pointer-events",
            "visibility",
            "z-index",
            "transform",
            "transition",
            "animation"
        ],
        "order/order": [
            "custom-properties",
            "declarations"
        ]
    }
}
